<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="选择上传的图片"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/send_article_activity_preview_ll"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/pic1"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_send_message_plus_selector"
                android:clickable="true"
                android:scaleType="center"
                android:src="@mipmap/ic_plus" />

            <ImageView
                android:id="@+id/pic2"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_send_message_plus_selector"
                android:clickable="true"
                android:scaleType="center"
                android:src="@mipmap/ic_plus" />

            <ImageView
                android:id="@+id/pic3"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_send_message_plus_selector"
                android:clickable="true"
                android:scaleType="center"
                android:src="@mipmap/ic_plus" />

            <ImageView
                android:id="@+id/pic4"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_send_message_plus_selector"
                android:clickable="true"
                android:scaleType="center"
                android:src="@mipmap/ic_plus" />

            <ImageView
                android:id="@+id/pic5"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_send_message_plus_selector"
                android:clickable="true"
                android:scaleType="center"
                android:src="@mipmap/ic_plus" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/camera"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:background="@drawable/iv_send_message_tool_selector"
                android:clickable="true"
                android:scaleType="center"
                android:src="@mipmap/ic_camera" />

            <ImageView
                android:id="@+id/add_pic"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@id/camera"
                android:background="@drawable/iv_send_message_tool_selector"
                android:clickable="true"
                android:scaleType="center"
                android:src="@mipmap/ic_attachment" />
            <ImageView
                android:id="@+id/clear_pic"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_toRightOf="@id/add_pic"
                android:background="@drawable/iv_send_message_tool_selector"
                android:clickable="true"
                android:scaleType="center"
                android:src="@mipmap/ic_clear" />

            <ImageView
                android:id="@+id/send_pic"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/iv_send_message_tool_selector"
                android:clickable="true"
                android:scaleType="center"
                android:src="@mipmap/ic_send" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="获取图片处理结果"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="处理图片"
                android:id="@+id/handle_pic"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="获取结果"
                android:id="@+id/get_result"/>

        </LinearLayout>

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</LinearLayout>
